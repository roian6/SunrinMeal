<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="등록한 학생증을 인식할 수 있습니다."
        android:textSize="14dp"
        android:id="@+id/txt_scan_help"
        android:fontFamily="@font/nanumsquarer"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_scan_help"
        android:layout_centerHorizontal="true"
        android:text="※현재 지원하지 않는 기능입니다."
        android:textSize="14dp"
        android:fontFamily="@font/nanumsquarer"
        />

    <LinearLayout
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="36dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/btn_idcardscan"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:src="@drawable/ic_credit_card_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squarer"
            android:text="학생증 인식하기" />

    </LinearLayout>

</RelativeLayout>